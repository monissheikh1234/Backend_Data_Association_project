<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Profile</title>
</head>
<body class="bg-gray-100 min-h-screen">
    <!-- Profile Header -->
    <div class="bg-gradient-to-r from-blue-500 to-indigo-600 text-white p-6 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">Hello, <%= user.name %>! Welcome to your profile</h1>
            <div class="flex items-center space-x-4">
                <a href="/post" class="bg-white text-blue-600 px-4 py-2 rounded-md shadow hover:bg-gray-100">
                    Add New Products
                </a>
                <a href="/logout" class="bg-red-500 text-white px-4 py-2 rounded-md shadow hover:bg-red-600">
                    Logout
                </a>
            </div>
        </div>
    </div>

    <!-- Products Section -->
    <div class="container mx-auto p-6">
        <h2 class="text-3xl font-bold text-gray-700 mb-6">Your Products</h2>
        <div class="flex flex-wrap gap-6">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="bg-white p-6 w-full md:w-1/2 lg:w-1/3 rounded-lg shadow-md hover:shadow-lg transition-shadow">
                        <h2 class="text-xl font-bold text-blue-600 mb-2"><%= product.name %></h2>
                        <p class="text-gray-700 mb-2"><strong>Price:</strong> $<%= product.price %></p>
                        <p class="text-gray-700 mb-2"><strong>Category:</strong> <%= product.category %></p>
                        <p class="text-gray-600"><strong>Description:</strong> <%= product.description %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-center w-full text-gray-600">You have no products.</p>
            <% } %>
        </div>
    </div>
</body>
</html>